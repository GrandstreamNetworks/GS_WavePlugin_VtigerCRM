<!doctype html>
<html>
<head>
    <meta charset="utf-8"/>
    <title>Vtiger CRM</title>
    <script src="<%= context.config.publicPath %>plugin_sdk.js" type="text/javascript"></script>
</head>
<body>
<div id="root"></div>
<script>
    /**
     * 监听窗口初始化完成
     * 打开默认窗口
     */
    pluginSDK.eventEmitter.on('onInitPluginWindowOk', function ({ userConfig, pluginPath }) {
        console.log('onInitPluginWindowOk', userConfig);
        pluginSDK.setDefaultWindow({
            width: 482,
            height: 570,
            center: true,
            show: false,
        })
        sessionStorage.setItem('pluginPath', pluginPath);
        window.location.hash = '#/login'
    })
</script>
</body>
</html>